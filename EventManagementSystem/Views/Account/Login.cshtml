@model EventManagementSystem.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null; // Remove layout for standalone page
}

<!DOCTYPE html>
<html lang="en" class="login-page">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - EventFlow</title>
    
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Login Page CSS -->
    <link href="~/css/login.css" rel="stylesheet" />
    
    <!-- SweetAlert2 for notifications -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <!-- Logo -->
            <div class="login-logo">
                <div class="login-logo-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <div class="login-logo-text">
                    Event<span>Flow</span>
                </div>
            </div>
            
            <!-- Card Header -->
            <div class="login-card-header">
                <h3>Welcome Back</h3>
                <p>Sign in to your account to continue</p>
            </div>
            
            <!-- Alert Container -->
            <div id="loginAlert" class="login-alert">
                <!-- Messages will be inserted here -->
            </div>
            
            <!-- Login Form -->
            <form asp-action="Login" method="post" class="login-form" id="loginForm">
                @Html.AntiForgeryToken()
                
                <!-- Email Field -->
                <div class="form-group">
                    <label asp-for="Email">Email Address</label>
                    <div class="input-wrapper">
                        <i class="fas fa-envelope input-icon"></i>
                        <input asp-for="Email" class="form-control" 
                               placeholder="Enter your email" 
                               required 
                               autocomplete="email" 
                               autofocus />
                    </div>
                    <span asp-validation-for="Email" class="invalid-feedback d-block"></span>
                </div>
                
                <!-- Password Field -->
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="Password" type="password" 
                               class="form-control" 
                               placeholder="Enter your password" 
                               required 
                               autocomplete="current-password" />
                    </div>
                    <span asp-validation-for="Password" class="invalid-feedback d-block"></span>
                    
                    <!-- Forgot Password Link -->
                    @* <a href="#" class="forgot-password" id="forgotPasswordLink"> *@
                    @*     Forgot password? *@
                    @* </a> *@
                </div>
                
                <!-- Remember Me -->
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">
                        Remember me for 30 days
                    </label>
                </div>
                
                <!-- Submit Button -->
                <button type="submit" class="login-button" id="loginButton">
                    <span class="button-text">
                        <i class="fas fa-sign-in-alt"></i> Sign In
                    </span>
                    <span class="login-button-spinner"></span>
                </button>
            </form>
            
            <!-- Links -->
            <div class="login-links">
                <p>Don't have an account? <a asp-action="Register">Create one now</a></p>
            </div>
            
            @* <!-- Social Login (Optional) --> *@
            @* <div class="login-social"> *@
            @*     <p>Or continue with</p> *@
            @*     <div class="social-buttons"> *@
            @*         <button type="button" class="social-button" title="Google"> *@
            @*             <i class="fab fa-google"></i> *@
            @*         </button> *@
            @*         <button type="button" class="social-button" title="Facebook"> *@
            @*             <i class="fab fa-facebook-f"></i> *@
            @*         </button> *@
            @*         <button type="button" class="social-button" title="Twitter"> *@
            @*             <i class="fab fa-twitter"></i> *@
            @*         </button> *@
            @*     </div> *@
            @* </div> *@
            
            @* <!-- Footer --> *@
            @* <div class="login-footer"> *@
            @*     <p>&copy; @DateTime.Now.Year EventFlow. All rights reserved.  *@
            @*        <a href="/">Back to Home</a> |  *@
            @*        <a href="#">Privacy Policy</a> |  *@
            @*        <a href="#">Terms of Service</a> *@
            @*     </p> *@
            @* </div> *@
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/login.js"></script>
    
    <!-- Validation Scripts -->
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>