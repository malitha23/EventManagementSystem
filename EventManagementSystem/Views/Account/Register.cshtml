@model EventManagementSystem.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Event Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Poppins', sans-serif;
        }

        .register-container {
            display: flex;
            height: 100vh;
        }

        .register-image {
            flex: 1;
            background: url('https://images.unsplash.com/photo-1556761175-4b46a572b786?fit=crop&w=1200&q=80') no-repeat center center;
            background-size: cover;
        }

        .register-form {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem;
            background: linear-gradient(135deg, #3498db, #2980b9);
        }

        .register-card {
            width: 100%;
            max-width: 450px;
            background: #fff;
            border-radius: 1rem;
            padding: 2rem;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }

            .register-card h3 {
                text-align: center;
                margin-bottom: 1.5rem;
                font-weight: 700;
                color: #2980b9;
            }

        .form-control {
            border-radius: 50px;
            padding-left: 2.5rem;
            height: 45px;
            border: 1px solid #ddd;
        }

            .form-control:focus {
                border-color: #3498db;
                box-shadow: 0 0 10px rgba(52, 152, 219, 0.2);
            }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #3498db;
        }

        .btn-register {
            border-radius: 50px;
            background: linear-gradient(90deg, #3498db, #2980b9);
            color: #fff;
            font-weight: 600;
            transition: all 0.3s;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .btn-register:hover {
                background: linear-gradient(90deg, #2980b9, #3498db);
                color: #fff;
            }

        .spinner-border-sm {
            width: 1rem;
            height: 1rem;
            margin-left: 0.5rem;
        }

        .text-center a {
            color: #3498db;
            font-weight: 500;
            text-decoration: none;
        }

            .text-center a:hover {
                text-decoration: underline;
            }

        .register-image {
            height: 250px;
        }

        }
    </style>
</head>
<body>
    <div class="register-container">
        
        <div class="register-form">
            <div class="register-card">
                <h3>Create Your Account</h3>
                <form asp-action="Register" method="post" class="position-relative" id="registerForm">
                    <div class="mb-3 position-relative">
                        <i class="fas fa-user input-icon"></i>
                        <input asp-for="Name" class="form-control" placeholder="Full Name">
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3 position-relative">
                        <i class="fas fa-envelope input-icon"></i>
                        <input asp-for="Email" class="form-control" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3 position-relative">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-3 position-relative">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-3 position-relative">
                        <i class="fas fa-phone input-icon"></i>
                        <input asp-for="Phone" class="form-control" placeholder="Phone Number">
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>

                    <div class="mb-3 position-relative">
                        <i class="fas fa-user-tag input-icon"></i>
                        <select asp-for="Role" class="form-select">
                            <option value="customer">Customer</option>
                            <option value="organizer">Event Organizer</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger small"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-register btn-lg" id="registerButton">
                            <span id="registerButtonText"><i class="fas fa-user-plus me-2"></i> Create Account</span>
                            <span id="registerButtonSpinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                        </button>
                    </div>
                </form>

                <div class="text-center">
                    <p>Already have an account? <a asp-action="Login">Login here</a></p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const registerForm = document.getElementById('registerForm');
        const registerButton = document.getElementById('registerButton');
        const registerButtonText = document.getElementById('registerButtonText');
        const registerButtonSpinner = document.getElementById('registerButtonSpinner');

        registerForm.addEventListener('submit', function() {
            // Disable the button to prevent multiple clicks
            registerButton.disabled = true;
            // Hide text and show spinner
            registerButtonText.classList.add('d-none');
            registerButtonSpinner.classList.remove('d-none');
        });
    </script>
</body>
</html>
