@model EventManagementSystem.Models.ViewModels.EventCategoryCreateViewModel

@{
    ViewData["Title"] = "Create New Category";
    Layout = "_Layout";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Create New Category</h1>
        <a href="@Url.Action("EventCategories")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Categories
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 fw-bold text-primary">Category Information</h6>
                </div>
                <div class="card-body">
                    <form asp-action="CreateCategory" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label required"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter category name">
                            <span asp-validation-for="Name" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Category names should be descriptive and unique
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("EventCategories")" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Create Category
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Examples Card -->
            <div class="card shadow mt-4">
                <div class="card-header py-3">
                    <h6 class="m-0 fw-bold text-primary">Category Examples</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="fw-bold text-success">Good Examples</h6>
                            <ul class="small">
                                <li>Music Concerts</li>
                                <li>Business Conferences</li>
                                <li>Sports Events</li>
                                <li>Art Exhibitions</li>
                                <li>Educational Workshops</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="fw-bold text-danger">Bad Examples</h6>
                            <ul class="small">
                                <li>Event (too generic)</li>
                                <li>Fun (not descriptive)</li>
                                <li>Meeting (too broad)</li>
                                <li>123 (non-descriptive)</li>
                                <li>Test Category (not professional)</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}