@model EventManagementSystem.Models.ViewModels.PromotionEditViewModel

@{
    ViewData["Title"] = "Edit Promotion";
    Layout = "_Layout";
}

<div class="container-fluid">
    <h2>Edit Promotion</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="EditPromotion" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Code" class="form-label">Promotion Code</label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DiscountType" class="form-label">Discount Type</label>
            <select asp-for="DiscountType" class="form-control">
                <option value="">Select Type</option>
                @if (ViewBag.DiscountTypes != null)
                {
                    @foreach (var type in ViewBag.DiscountTypes as List<string>)
                    {
                        if (type == Model.DiscountType)
                        {
                            <option value="@type" selected>@type.ToUpper()</option>
                        }
                        else
                        {
                            <option value="@type">@type.ToUpper()</option>
                        }
                    }
                }
            </select>
            <span asp-validation-for="DiscountType" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DiscountValue" class="form-label">Discount Value</label>
            <input asp-for="DiscountValue" class="form-control" />
            <span asp-validation-for="DiscountValue" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="StartDate" class="form-label">Start Date</label>
            <input asp-for="StartDate" type="date" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EndDate" class="form-label">End Date</label>
            <input asp-for="EndDate" type="date" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Status" class="form-label">Status</label>
            <select asp-for="Status" class="form-control">
                <option value="active" selected="@(Model.Status == "active")">Active</option>
                <option value="inactive" selected="@(Model.Status == "inactive")">Inactive</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update Promotion</button>
        <a asp-action="Promotions" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
